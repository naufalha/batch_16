classDiagram
    direction TB

    %% ===== ENUMS & STRUCTS =====
    class DiscColor {
        <<enumeration>>
        None
        Black
        White
    }

    class Coordinate {
        <<struct>>
        +int Row
        +int Col
    }

    %% ===== DISC (Object) =====
    class Disc {
        +DiscColor Color
        +Coordinate Position
        +Disc(DiscColor color, Coordinate pos)
    }

    %% ===== PLAYER (Data Entity) =====
    class Player {
        +string Name
        +DiscColor Color
        +Player(string name, DiscColor color)
    }

    %% ===== BOARD (Grid Manager) =====
    class IBoard {
        <<interface>>
        +Disc GetCell(int row, int col)
        +bool IsInside(int row, int col)
        +PlaceDisc(int row, int col, DiscColor color)
        +FlipDisc(int row, int col)
        +Initialize()
    }

    class Board {
        -Disc[8][8] _grid
        +Initialize()
        +GetCell(r, c) Disc
        +PlaceDisc(r, c, color)
        +FlipDisc(r, c)
    }

    IBoard <|.. Board
    Board *-- Disc : Contains

    %% ===== GAME (Logic Core) =====
class Game {
        -IBoard _board
        -Dictionary~DiscColor, Player~ _players
        -DiscColor _currentTurn
        -int _blackScore
        -int _whiteScore

        +event Action~IBoard~ OnBoardUpdated
        +event Action~Player~ OnTurnChanged
        +event Action~Score~ OnScoreUpdated
        +event Action~string~ OnInvalidMove
        +event Action~DiscColor~ OnGameOver
        
        +Game(players, board)
        +Start()
        +PlayMove(int row, int col)
        
        %% NEW OPTIMIZATION METHODS
        +GetValidMoves() List~Coordinate~
        +Restart()
        
        +GetScore() Score
        -SwitchTurn()
        +ResetGame()
    }

    %% ===== RELATIONSHIPS =====
    Game --> IBoard : Controls
    Game --> Player : Maps via Dictionary
    Game ..> Disc : Creates