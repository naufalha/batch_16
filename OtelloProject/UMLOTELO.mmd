classDiagram
    direction TB

    %% ===== ENUM =====
    class DiscColor {
        <<enumeration>>
        None
        Black
        White
    }

    %% ===== GAME =====
    class Game {
        -IBoard _board
        -Dictionary~DiscColor, IPlayer~ _players
        -DiscColor _currentTurn
        +event Action<Board> OnBoardUpdated
        +event Action<DiscColor> OnTurnChanged
        +event Action<GameState> OnGameOver
        +Game(Dictionary<DiscColor, IPlayer> players, IBoard board)
        +Start()
        +PlayMove(int row, int col)
        -FlipCapturedDiscs(int row, int col)
        -GetValidMoves() List~Coordinate~
        -SwitchTurn()
        -IsGameOver() bool
    }

    %% ===== PLAYER =====
    class IPlayer {
        <<interface>>
        +string Name
        +Coordinate GetMove()
    }

    class HumanPlayer {
        +string Name
        +HumanPlayer(string name)
        +Coordinate GetMove()
    }

    IPlayer <|.. HumanPlayer

    %% ===== BOARD =====
    class IBoard {
        <<interface>>
        +int GetScore(DiscColor color)
        +Disc GetCell(int row, int col)
        +bool IsInside(int row, int col)
        +PlaceDisc(Disc disc)
        +Initialize()
    }

    class Board {
        -Disc[8][8] _grid
        +Initialize()
        +GetScore(DiscColor color) int
        +GetCell(int row, int col) Disc
        +IsInside(int row, int col) bool
        +PlaceDisc(Disc disc)
    }

    IBoard <|.. Board

    %% ===== DISC =====
    class Disc {
        +DiscColor Color
        +Coordinate Position
        +Flip()
    }

    %% ===== COORDINATE STRUCT =====
    class Coordinate {
        <<struct>>
        +int Row
        +int Col
    }

    Game --> IBoard
    Game --> IPlayer
    Board --> Disc
    Disc --> DiscColor
    Disc --> Coordinate
