@model SmkNgawi.DTOs.CreateMajorRequest

<div class="container mt-4">
    <h2>Tambah Jurusan Baru</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddMajor" method="post">
                
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label">Nama Jurusan</label>
                    <input asp-for="MajorName" class="form-control" placeholder="Contoh: Rekayasa Perangkat Lunak" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Kode Jurusan</label>
                    <input asp-for="Code" class="form-control" placeholder="Contoh: RPL" />
                </div>

                <button type="submit" class="btn btn-success">Simpan Jurusan</button>
                <a href="/Student" class="btn btn-secondary">Kembali</a>
            </form>
        </div>
    </div>
</div>